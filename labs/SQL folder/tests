1.1 select * from Customers where City IN ('London','Paris')

1.2 select * from products where QuantityPerUnit Like '%bottles'

1.3 select p.ProductName, s.companyname,CONCAT(s.Address,'',s.City,'',s.Country) as address from Products p
join suppliers s on s.supplierID = p.SupplierID
where QuantityPerUnit like '%bottles' 

1.4 select c.categoryname, Count(*) as products_in_catergory from Products p 
join Categories c on c.CategoryID = p.CategoryID
group by c.CategoryName
order by products_in_catergory desc

1.5 select CONCAT(e.TitleOfCourtesy,' ', e.FirstName,' ',e.LastName) as name, city from Employees e

1.6 select r.RegionDescription, FORMAT (SUM(unitPrice * Quantity), '#,###,###') as SalesTotal from [Order Details] od
Inner Join Orders o on od.OrderID = o.OrderID Inner Join EmployeeTerritories e on o.EmployeeID = e.EmployeeID
Inner Join Territories t on e.TerritoryID = t.TerritoryID Inner Join Region r on t.RegionID = r.RegionID 
group by r.RegionDescription 
having SUM(unitPrice * Quantity) > 1000000

1.7 select count(*) as freight_from_locations from orders where Freight > 100 And ShipCountry in ('UK','USA')

1.8 select top 1 orderid,(UnitPrice * Quantity * Discount) as highestDiscount from [Order Details] order by highestDiscount desc

2.1 drop database if exists students
drop table if exists spartans


create database students

create table spartans
(
	
	SeperateTitle nvarchar (12) PRIMARY KEY,
	FirstName nvarchar(50),
	LastName nvarchar(50),
	University nvarchar(50),
	Course nvarchar(50),
	MarkArchived nvarchar(50),
	

)



